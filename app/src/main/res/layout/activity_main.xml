<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/EnterName"
            android:text="@string/enter_the_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp"/>
    <EditText
            android:id="@+id/nameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EnterName"
            android:layout_marginTop="60dp"
            android:autofillHints=""/>
    <Button
            android:id="@+id/Birthdaycard"
            android:text="@string/create_birthday_greet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameInput"
            android:onClick="createBirthdayCard"
            android:padding="15dp"
            android:layout_marginTop="60dp"
            android:textColor="#100909"
            android:textAllCaps="false"
            android:textColorHighlight="#BFAFAF"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#EDE9E9"/>
</androidx.constraintlayout.widget.ConstraintLayout>